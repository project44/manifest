{
  "extends": "./tsconfig.options.json",
  "compilerOptions": {
    "emitDeclarationOnly": false,
    "noEmit": true
  },
  "include": [
    "apps/*/src/**/*",
    "packages/*/src/**/*",
    "packages/*/stories/**/*",
    "packages/*/tests/**/*",
    "packages/react-components/*/src/**/*",
    "packages/react-components/*/stories/**/*",
    "packages/react-components/*/tests/**/*",
    "packages/react-utilities/*/src/**/*",
    "packages/react-utilities/*/tests/**/*",
    "scripts/**/*"
  ]
}
