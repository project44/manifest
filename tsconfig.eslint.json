{
  "extends": "./tsconfig.options.json",
  "compilerOptions": {
    "emitDeclarationOnly": false,
    "noEmit": true
  },
  "include": [
    "packages/**/*",
    "apps/**/*",
    "**/.eslintrc.js",
    "**/jest.config.js"
  ],
  "exclude": [
    "**/.cache/**/*",
    "**/.next/**/*",
    "**/build/**/*",
    "**/dts/**/*",
    "**/esm/**/*",
    "**/lib/**/*",
    "**/node_modules/**/*"
  ]
}
