{
  "name": "manifest-root",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "run-s build:tokens build:packages type",
    "build:packages": "packemon build --addEngines",
    "build:storybook": "build-storybook -c .storybook -o ./docs",
    "build:tokens": "node packages/design-tokens/scripts/build.js",
    "changeset": "changeset",
    "chromatic": "chromatic",
    "clean": "yarn run clean:build && yarn run clean:types && yarn run clean:tokens",
    "clean:build": "packemon clean",
    "clean:tokens": "rimraf 'packages/design-tokens/src'",
    "clean:types": "rimraf 'packages/**/*/*.tsbuildinfo'",
    "dev": "run-s dev:build dev:storybook",
    "dev:build": "yarn run build",
    "dev:storybook": "start-storybook -p 6006 --quiet",
    "format": "prettier --write .",
    "lint": "eslint --cache --color --fix --ext .ts,.tsx ./packages/*/{src,test}",
    "pack": "NODE_ENV=production packemon pack --addEngines --declaration",
    "prepare": "husky install",
    "prerelease": "yarn run pack && yarn lint",
    "release": "yarn changeset publish",
    "test": "jest --colors --logHeapUsage",
    "test:coverage": "yarn run test --coverage",
    "test:watch": "jest --watch",
    "type": "tsc --build",
    "version": "yarn changeset version && yarn install --mode=update-lockfile"
  },
  "dependencies": {
    "@babel/core": "^7.18.13",
    "@babel/register": "^7.18.9",
    "@babel/runtime": "^7.18.9",
    "@changesets/changelog-github": "^0.4.4",
    "@changesets/cli": "^2.22.0",
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@storybook/addon-a11y": "^6.5.10",
    "@storybook/addon-essentials": "^6.5.10",
    "@storybook/builder-webpack5": "^6.5.10",
    "@storybook/manager-webpack5": "^6.5.10",
    "@storybook/react": "^6.5.10",
    "@swc/jest": "^0.2.22",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.2.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^28.1.7",
    "@types/jest-axe": "^3.5.3",
    "@types/react": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.34.0",
    "@typescript-eslint/parser": "^5.34.0",
    "chokidar-cli": "^3.0.0",
    "chromatic": "^6.6.4",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.8.7",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-perf": "^3.3.1",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "jest-axe": "^6.0.0",
    "jest-environment-jsdom": "^28.1.3",
    "lint-staged": "^12.4.2",
    "lodash": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "packemon": "^2.3.7",
    "prettier": "^2.7.1",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0"
  },
  "engines": {
    "node": ">=14.19.0",
    "npm": ">=6.13.0"
  },
  "packageManager": "yarn@3.2.0"
}
