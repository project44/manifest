{
  "name": "manifest-root",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/react-components/*",
    "tools/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:apps": "turbo run build --filter=\"./apps/*\"",
    "build:packages": "turbo run build --filter=\"./{packages,tools}/*\"",
    "clean": "turbo run clean",
    "coverage": "turbo run coverage",
    "dev": "turbo run dev",
    "format": "prettier --check \"**/*.{ts,tsx,md}\"",
    "format:packages": "prettier --check \"./packages/**/*.{ts,tsx,md}\"",
    "format:fix": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "lint:packages": "turbo run lint --filter=\"./{packages,tools}/*\"",
    "prepare": "husky install",
    "test": "turbo run test",
    "test:packages": "turbo run test --filter=\"./{packages,tools}/*\"",
    "typecheck": "turbo run typecheck --filter=\"!./apps/*\"",
    "release": "yarn run build && changeset publish",
    "version": "yarn changeset version && yarn install --mode=update-lockfile"
  },
  "dependencies": {
    "@changesets/changelog-github": "^0.4.4",
    "@changesets/cli": "^2.22.0",
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@types/jest": "^29.2.1",
    "@types/node": "^18.11.9",
    "danger": "^11.2.0",
    "eslint": "^8.26.0",
    "eslint-config-manifest": "*",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "turbo": "^1.6.3",
    "typescript": "4.7.4"
  },
  "packageManager": "yarn@3.2.3",
  "engines": {
    "node": "^18.12.1"
  }
}
