{
  "name": "manifest-root",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "changeset": "changeset",
    "clean": "yarn run clean:build && yarn run clean:types && yarn run clean:tokens",
    "clean:build": "packemon clean",
    "clean:tokens": "rimraf 'packages/design-tokens/src'",
    "clean:types": "rimraf 'packages/**/*/*.tsbuildinfo'",
    "build": "yarn run build:tokens && yarn run build:packages && yarn run build:types",
    "build:packages": "packemon build --addEngines",
    "build:storybook": "build-storybook -c .storybook -o ./docs -s .storybook/static",
    "build:tokens": "node packages/design-tokens/build",
    "build:types": "beemo typescript --build",
    "format": "beemo prettier",
    "lint": "beemo eslint",
    "pack": "NODE_ENV=production packemon pack --addEngines --declaration",
    "postinstall": "husky install && beemo create-config",
    "release": "yarn changeset publish",
    "start": "start-storybook -p 6006",
    "test": "beemo jest",
    "test:coverage": "yarn run test --coverage",
    "version": "yarn changeset version && yarn install --mode=update-lockfile"
  },
  "dependencies": {
    "@beemo/cli": "^2.0.6",
    "@beemo/core": "^2.1.4",
    "@changesets/changelog-github": "^0.4.4",
    "@changesets/cli": "^2.22.0",
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@storybook/addon-a11y": "^6.5.5",
    "@storybook/addon-essentials": "^6.5.5",
    "@storybook/addon-links": "^6.5.5",
    "@storybook/builder-webpack5": "^6.5.4",
    "@storybook/core": "^6.5.4",
    "@storybook/manager-webpack5": "^6.5.4",
    "@storybook/react": "^6.5.4",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.2.0",
    "@testing-library/user-event": "^14.2.0",
    "@types/jest-axe": "^3.5.3",
    "@types/react": "^18.0.9",
    "chokidar": "^3.5.3",
    "chokidar-cli": "^3.0.0",
    "chromatic": "^6.5.4",
    "concurrently": "^7.2.1",
    "husky": "^8.0.1",
    "jest-axe": "^6.0.0",
    "lint-staged": "^12.4.2",
    "lodash": "^4.17.21",
    "packemon": "^2.2.2",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "rimraf": "^3.0.2",
    "storybook-addon-performance": "^0.16.1",
    "webpack": "^5.70.0"
  },
  "packageManager": "yarn@3.2.0"
}
