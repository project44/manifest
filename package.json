{
  "name": "manifest-root",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*",
    "tooling/*"
  ],
  "scripts": {
    "build": "run-s build:packemon build:types",
    "build:docs": "run-s build build:next",
    "build:packemon": "packemon build --addEngines",
    "build:next": "yarn workspace @project44-manifest/docs build",
    "build:storybook": "yarn workspace @project44-manifest/storybook build",
    "build:types": "tsc -b",
    "dev": "run-s build dev:storybook",
    "dev:all": "run-p dev:storybook dev:website",
    "dev:docs": "yarn workspace @project44-manifest/docs dev",
    "dev:packemon": "packemon watch",
    "dev:storybook": "yarn workspace @project44-manifest/storybook dev",
    "changeset": "changeset",
    "chromatic": "chromatic",
    "clean": "run-s clean:packemon clean:types",
    "clean:packemon": "packemon clean",
    "clean:types": "rimraf 'packages/**/*/*.tsbuildinfo'",
    "format": "prettier --write .",
    "generate:prop-docs": "ts-node --skipProject ./scripts/generate-prop-docs.ts",
    "lint": "eslint --cache --color --fix --ext .ts,.tsx ./packages/*/{src,test}",
    "prepare": "husky install",
    "release": "yarn changeset publish",
    "test": "jest --colors --logHeapUsage",
    "test:coverage": "yarn run test --coverage",
    "test:watch": "jest --watch",
    "version": "yarn changeset version && yarn install --mode=update-lockfile"
  },
  "dependencies": {
    "@changesets/changelog-github": "^0.4.4",
    "@changesets/cli": "^2.22.0",
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.2.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.4.3",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^28.1.7",
    "@types/jest-axe": "^3.5.3",
    "@types/react": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.34.0",
    "@typescript-eslint/parser": "^5.34.0",
    "babel-preset-moon": "^1.0.2",
    "chokidar-cli": "^3.0.0",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.8.7",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-perf": "^3.3.1",
    "fast-glob": "^3.2.12",
    "fs-extra": "^10.1.0",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "jest-axe": "^6.0.0",
    "jest-environment-jsdom": "^28.1.3",
    "jest-preset-moon": "^1.0.2",
    "lint-staged": "^12.4.2",
    "lodash": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "packemon": "^2.4.1",
    "prettier": "^2.7.1",
    "prettier-config-moon": "^1.0.1",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "tsconfig-moon": "^1.0.1",
    "typescript": "^4.7.4",
    "yargs": "^17.5.1"
  },
  "packageManager": "yarn@3.2.0"
}
