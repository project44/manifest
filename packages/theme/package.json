{
  "name": "@project44-manifest/theme",
  "version": "1.0.1",
  "description": "Manifest Design System themes",
  "license": "MIT",
  "author": "project44",
  "keywords": [
    "manifest",
    "design",
    "system"
  ],
  "sideEffects": false,
  "main": "./lib/index.js",
  "module": "./esm/index.js",
  "types": "./dts/index.d.ts",
  "files": [
    "dts/**/*.d.ts",
    "esm/**/*.{js,map}",
    "lib/**/*.{js,map}",
    "src/**/*.{ts,tsx,json}"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:project-44/manifest.git",
    "directory": "packages/theme"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "packemon build --addEngines --declaration --declarationConfig tsconfig.build.json",
    "clean": "rimraf .turbo && packemon clean",
    "coverage": "jest --coverage",
    "dev": "packemon watch",
    "lint": "eslint .",
    "test": "jest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@project44-manifest/design-tokens": "*",
    "@project44-manifest/utils": "*",
    "lodash.kebabcase": "^4.1.1",
    "lodash.merge": "^4.6.2"
  },
  "devDependencies": {
    "@types/lodash.kebabcase": "^4.1.7",
    "@types/lodash.merge": "^4.6.7",
    "jest": "^29.2.2",
    "jest-preset-manifest": "*",
    "tsconfig-manifest": "*"
  },
  "packemon": {
    "platform": "browser"
  }
}
