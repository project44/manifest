{
  "name": "@project44-manifest/theme",
  "version": "0.1.1",
  "description": "Manifest Design System themes",
  "license": "MIT",
  "author": "project44",
  "keywords": [
    "manifest",
    "design",
    "system"
  ],
  "main": "./lib/index.js",
  "module": "./esm/index.js",
  "types": "./dts/index.d.ts",
  "files": [
    "dts/**/*.d.ts",
    "esm/**/*.{js,map}",
    "lib/**/*.{js,map}",
    "src/**/*.{ts,tsx,json}"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dts/index.d.ts",
      "browser": {
        "module": "./esm/index.js",
        "import": "./esm/index.js",
        "default": "./lib/index.js"
      },
      "default": "./lib/index.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:project-44/manifest.git",
    "directory": "packages/theme"
  },
  "scripts": {
    "build": "packemon build --addEngines --addExports --declaration --declarationConfig tsconfig.build.json",
    "clean": "packemon clean && rm -rf .turbo node_modules *.tsbuildinfo",
    "typecheck": "tsc -b"
  },
  "dependencies": {
    "@project44-manifest/design-tokens": "^1.1.1",
    "lodash.merge": "^4.6.2"
  },
  "devDependencies": {
    "@types/lodash.merge": "^4.6.7"
  },
  "packemon": {
    "platform": "browser"
  }
}
