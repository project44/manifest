{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationDir": "dts",
    "emitDeclarationOnly": true,
    "noEmit": false,
    "outDir": "dts",
    "rootDir": "src"
  },
  "exclude": ["src/**/*.spec.ts*", "src/**/*.stories.ts*"],
  "include": ["src/**/*"],
  "references": [
    { "path": "../system/tsconfig.build.json" },
    { "path": "../theme/tsconfig.build.json" }
  ]
}
