{
  "name": "@project44-manifest/design-tokens",
  "version": "1.1.0",
  "description": "Manifest Design System design tokens",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.mjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./json/*": "./dist/json/*",
    "./css/*": "./dist/css/*"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "git@github.com:project-44/manifest.git",
    "directory": "packages/design-tokens"
  },
  "scripts": {
    "build": "run-s build:tokens build:package",
    "build:tokens": "node -r @swc-node/register scripts/build.ts",
    "build:package": "tsup src/index.ts --format esm,cjs --dts",
    "clean": "rimraf .turbo dist",
    "dev": "chokidar \"tokens/**/*.json\" -c \"yarn run build\"",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "style-dictionary": "^3.7.0"
  }
}
