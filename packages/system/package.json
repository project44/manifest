{
  "name": "@project44-manifest/system",
  "version": "0.1.4",
  "description": "Manifest Design System core utilities",
  "license": "MIT",
  "author": "project44",
  "keywords": [
    "manifest",
    "design",
    "system",
    "react"
  ],
  "main": "./lib/index.js",
  "module": "./esm/index.js",
  "types": "./dts/index.d.ts",
  "files": [
    "dts/**/*.d.ts",
    "esm/**/*.{js,map}",
    "lib/**/*.{js,map}",
    "src/**/*.{ts,tsx,json}"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dts/index.d.ts",
      "browser": {
        "module": "./esm/index.js",
        "import": "./esm/index.js",
        "default": "./lib/index.js"
      },
      "default": "./lib/index.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:project-44/manifest.git",
    "directory": "packages/system"
  },
  "scripts": {
    "build": "packemon build --addEngines --addExports --declaration --declarationConfig tsconfig.build.json",
    "clean": "packemon clean && rm -rf .turbo node_modules *.tsbuildinfo",
    "typecheck": "tsc -b"
  },
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0",
    "react-dom": "^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "@project44-manifest/react-test-utils": "^0.1.0",
    "react": "^18.1.0",
    "react-dom": "^18.1.0"
  },
  "packemon": {
    "platform": "browser"
  }
}
